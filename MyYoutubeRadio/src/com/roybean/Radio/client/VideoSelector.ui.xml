<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.imageContainer {
		background-color: transparent;
		width: 60px;
		height: 60px;
		margin-right: 20px;
		float: left;
	}
	
	.searchContainer{
		margin: 20px;		
	}
	
	.titleContainer{
	    height: 2.6em;
	    line-height: 1.2em;
	    overflow: hidden;
	    width: 216px;
	}
	
	.labelCheckbox{
		width: 160px;
		float: right;
	}
	
	.searcCheck{
		float: right;
	}
	
	</ui:style>
	
	
	<g:FlowPanel ui:field="searchPanel" width="100%" height="60px" styleName="{style.searchContainer}">
		<g:SimplePanel styleName="{style.imageContainer}" ui:field="imageContainer"/>	
		<g:FlowPanel>
			<g:Label ui:field="titleContainer" styleName="{style.titleContainer}"/>
			<g:SimpleCheckBox ui:field="test" checked="true" styleName="{style.searcCheck}"/>
			<g:Label ui:field="checkLabel" text="Play Video" styleName="{style.labelCheckbox}"/>				
			
		</g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder> 